<h2>
    {{#employee.employee_id}}Upravit pracovníka{{/employee.employee_id}}
    {{^employee.employee_id}}Založit pracovníka{{/employee.employee_id}}
</h2>
<form method="post">
<!--    id-->
    <input type="hidden" name="employee_id" value="{{employee.employee_id}}">

    <!--    name-->
    <div class="form-group">
        <label for="name">Jméno</label>
        <input type="text" class="form-control" id="name" name="name" value="{{employee.name}}" required>
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="form-group">
        <label for="surname">Příjmení</label>
        <input type="text" class="form-control" id="surname" name="surname" value="{{employee.surname}}" required>
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="form-group">
        <label for="job">Práce</label>
        <input type="text" class="form-control" id="job" name="job" value="{{employee.job}}" required>
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="form-group">
        <label for="wage">Plat</label>
        <input type="text" class="form-control" id="wage" name="wage" value="{{employee.wage}}">
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    {{^employee.employee_id}}
    <div class="form-group">
        <label for="username">Uživatelské jméno</label>
        <input type="text" class="form-control" id="username" name="username" value="{{employee.username}}">
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="form-group">
        <label for="password">Heslo</label>
        <input type="password" class="form-control" id="password" name="password" value="">
        {{#errors.password}}<div class="d-block invalid-feedback">{{errors.password}}</div>{{/errors.password}}
    </div>
    {{/employee.employee_id}}
    {{#admin}}
    <div class="form-group">
        <label for="username">Uživatelské jméno</label>
        <input type="text" class="form-control" id="username" name="username" value="{{employee.username}}">
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
        <div class="form-group">
            <label for="admin"><br>Admin</label>
            <input type="checkbox" class="checkbox" value="{{employee.admin}}" name="admin" id="admin">
            {{#errors.admin}}<div class="d-block invalid-feedback">{{errors.admin}}</div>{{/errors.admin}}
        </div>
    {{/admin}}

    <div class="form-group">
        <label for="room"><br>Místnost</label>
        <select id="room_id" name="room">
            {{#rooms}}
            <option value="{{room_id}}">{{name}}</option>
            {{/rooms}}
        </select>
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="form-group">
        <label for="key">Klíče</label>
        {{#keys}}<br>
        <input type="checkbox" class="checkbox" id="{{room_id}}" name="keys[]" id="keys" value="{{room_id}}" {{#checked}}checked{{/checked}}>{{name}}
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
        {{/keys}}
    </div>
<!--tlacitko-->
    <button type="submit" class="btn btn-info mt-3">Odeslat</button>
</form>