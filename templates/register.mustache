<!doctype html>
<html lang="cs">
<body class="container">
<h1>Register Form</h1>
<form type="post">
<div class="form-group">
    <label for="name"> Username :</label>
    <input type="text" class="form-control" id="name" name="name" value="" required>
    {{#password_err}}<div class="d-block invalid-feedback">{{password_err}}</div>{{/password_err}}
</div>
<div class="form-group">
    <label for="name"> Password :</label>
    <input type="password" class="form-control" id="name" name="name" value="" required>
    {{#password_err}}<div class="d-block invalid-feedback">{{password_err}}</div>{{/password_err}}
</div>

<input type="hidden" name="room_id" value="{{employee.employee_id}}">

<!--    name-->
<div class="form-group">
    <label for="name">Jméno</label>
    <input type="text" class="form-control" id="name" name="name" value="{{employee.name}}" required>
    {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
</div>
<div class="form-group">
    <label for="name">Příjmení</label>
    <input type="text" class="form-control" id="name" name="name" value="{{employee.surname}}" required>
    {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
</div>
<div class="form-group">
    <label for="name">Práce</label>
    <input type="text" class="form-control" id="name" name="name" value="{{employee.job}}" required>
    {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
</div>
<div class="form-group">
    <label for="name">Příjem</label>
    <input type="text" class="form-control" id="name" name="name" value="{{employee.wage}}" required>
    {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
</div>
<div class="form-group">
    <label for="name">Místnost</label>
    <select>
        {{#rooms}}
            <option value="{{room_id}}">{{name}}</option>
        {{/rooms}}
    </select>
    {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
</div>
<div class="form-group">
    <label for="name">Klíče</label>
    {{#keys}}<br>
        <input type="checkbox" class="checkbox" id="name" name="name" value="{{selected}}">{{room_name}}
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    {{/keys}}
</div>
     <button type="submit" class="btn btn-info mt-3">Odeslat</button>
<p>Already have an account? Just <a href="../login.php">log in</a>.</p>
</form>
</body>
</html>